<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/background"
    android:screenOrientation="landscape"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/hint"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:hint="힌트를 입력해주세요."
        android:background="@android:color/transparent"
        android:textSize="20px"/>

    <ImageButton
        android:id="@+id/eheqhrl"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="690dp"
        android:layout_marginTop="34dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/eheqhrl" />

    <ImageButton
        android:id="@+id/pen"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="34dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/pen" />


    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="323dp"
        android:layout_marginLeft="360dp"
        android:text="00:00:00"
        android:textColor="@android:color/white"
        android:textSize="40pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:text="Hint :"
        android:textColor="@color/white"
        android:textSize="40px" />

    <TextView
        android:id="@+id/hint5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="40px" />

    <Button
        android:id="@+id/button_start_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_countdown"
        android:layout_marginLeft="470dp"
        android:layout_marginTop="75dp"
        android:text="start" />

    <Button
        android:background="#00ff0000"
        android:id="@+id/reset_button1"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_below="@+id/text_view_countdown"
        android:layout_marginTop="-430dp"
        />

    <Button
        android:id="@+id/reset_button4"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_below="@+id/text_view_countdown"
        android:layout_marginTop="-430dp"
        android:background="#00ff0000"
        />

    <Button
        android:background="#00ff0000"
        android:id="@+id/reset_button2"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_below="@+id/text_view_countdown"
        android:layout_marginTop="-430dp"
        />

    <Button
        android:background="#00ff0000"
        android:id="@+id/reset_button3"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_below="@+id/text_view_countdown"
        android:layout_marginTop="-430dp"
        />




</RelativeLayout>


